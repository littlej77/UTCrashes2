@{
    ViewData["Title"] = "Crash Severity Calculator";
}

@model CalculatorData
<div class="card mt-3">
    <h1 class="card-header">Crash Severity Calculator</h1><br />
</div>
<div class="card-body">
    <form method="post" asp-controller="Inference" asp-action="Score">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <label>Month:</label>
            <select asp-for="MONTH">
                <option value="1">January</option>
                <option value="2">Febuary</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>

            </select>
        </div>
        <br />
        <p>If the crash took place in one of these cities/Counties/locations, please indiciate by entering "Yes"</p>
        <p class="text-muted">City:</p>
        <div class="card-body">
            <label>American Fork:</label> <br />
            <select asp-for="CITY_AMERICAN_FORK">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Highland:</label> <br />
            <select asp-for="CITY_HIGHLAND">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Layton:</label> <br />
            <select asp-for="CITY_LAYTON">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Ogden:</label> <br />
            <select asp-for="CITY_OGDEN">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Provo:</label> <br />
            <select asp-for="CITY_PROVO">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Roy:</label> <br />
            <select asp-for="CITY_SALT_LAKE_CITY">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Salt Lake City:</label> <br />
            <select asp-for="CITY_SALT_LAKE_CITY">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>South Salt Lake:</label> <br />
            <select asp-for="CITY_SOUTH_SALT_LAKE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>West Jordan</label> <br />
            <select asp-for="CITY_WEST_JORDAN">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>West Valley City:</label> <br />
            <select asp-for="CITY_WEST_VALLEY_CITY">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Outside City Limits</label> <br />
            <select asp-for="CITY_OUTSIDE_CITY_LIMITS">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
