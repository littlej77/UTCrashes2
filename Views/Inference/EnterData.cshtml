                <option asp-for="DUI_TRUE" value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Intersection</label> <br />
            <select asp-for="INTERSECTION_RELATED_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Wild Animal</label> <br />
            <select asp-for="WILD_ANIMAL_RELATED_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Vehicle overturned/rolled</label> <br />
            <select asp-for="OVERTURN_ROLLOVER_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Older Driver Involved</label> <br />
            <select asp-for="OLDER_DRIVER_INVOLVED_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
