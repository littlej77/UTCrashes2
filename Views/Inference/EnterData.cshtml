            <select asp-for="SINGLE_VEHICLE_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Distracted Driving</label> <br />
            <select asp-for="DISTRACTED_DRIVING_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Drowsy Driving</label> <br />
            <select asp-for="DROWSY_DRIVING_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>
        <div class="card-body">
            <label>Roadway Departure</label> <br />
            <select asp-for="ROADWAY_DEPARTURE_TRUE">
                <option value="1">Yes</option>
                <option value="0" selected>No</option>
            </select>
        </div>

        <button type="submit" asp-controller="Inference" asp-action="Score">Calculate</button>
    </form>
